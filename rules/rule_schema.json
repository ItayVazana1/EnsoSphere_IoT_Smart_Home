{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Single Rule Schema",
  "type": "object",
  "required": ["id", "category", "description", "conditions_logic", "conditions", "actions"],
  "properties": {
    "id": { "type": "string" },
    "category": {
      "type": "string",
      "enum": ["weather", "time_based", "occupant_action", "threshold"]
    },
    "description": { "type": "string" },
    "conditions_logic": {
      "type": "string",
      "enum": ["AND", "OR"]
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "operator", "value"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["sensor", "environment"]
          },
          "sensor_id": { "type": "string" },
          "parameter": { "type": "string" },
          "operator": {
            "type": "string",
            "enum": ["==", "!=", ">", "<", ">=", "<="]
          },
          "value": {}
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["device_id", "command"],
        "properties": {
          "device_id": { "type": "string" },
          "command": { "type": "string" },
          "parameters": { "type": "object" }
        }
      }
    }
  }
}
